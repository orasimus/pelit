<% form_for @tag do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :image, "Image name" %><br />
    <%= f.text_field :image %>
  </p>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to "Tags", tags_path, :class => "green-link" %>
